[alias] 
	amend = !~/bin/git-amend
	br = branch 
	fu = commit --fixup
	co = checkout 
	st = status 
[color] 
	ui = auto 
[core] 
	excludesfile = ~/.gitignore
[diff]
	algorithm = patience
	compactionHeuristic = true
	renames = true
[format] 
	numbered = true 
[init]
	defaultBranch = main
[pull]
	rebase = true
[push]
	default = current
[rebase]
	autoSquash = true
	autoStash = true
[rerere] 
	enabled = true 
[status]
	showUntrackedFiles = all
[tag]
	sort = version:refname
[user] 
	name = Jussi Virtanen 
	email = jussi.k.virtanen@gmail.com 
